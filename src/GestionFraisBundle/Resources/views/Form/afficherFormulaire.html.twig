
{% extends '::base.html.twig' %}

{% block elementNavbar %}
    {% include 'GestionFraisBundle::sidebar.html.twig' %}
{% endblock %}

{% block title %}
    {% if nomForm is defined  %}
        {{ nomForm }}
    {% else %}
        Formulaire
    {% endif %}
{% endblock  %}

{%  block body %}
    <div class="bandeau"></div>
    <div class="container-fluid">

        <div class="col-lg-8 col-lg-offset-2 col-md-12 " id="contenu" >
            {% if Form is defined  %}
                <h2>{{ nomForm }}</h2>
            {% endif %}
            <div class="bandeau-small"></div>
            <div class="form-group">


                {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}



            </div>
            <div class="bandeau"></div>
            {% block contenue %}{% endblock %}
        </div>
    </div>
{% endblock  %}
